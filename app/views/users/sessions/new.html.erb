<main class="w-20 m-auto">
  <div class="row align-items-center border-form">
    <div class="border container p-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div align="center"><h1><%= t(".sign_in_title") %></h1></div><br>

        <div class="field">
          <%= f.email_field :email, class: "form-control",
          placeholder: User.human_attribute_name(:email), autofocus: true %>
        </div>

        <div class="field">
          <%= f.password_field :password, class:"form-control",
          placeholder: User.human_attribute_name(:password) %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check text-start my-3">
            <%= f.check_box :remember_me, class: 'form-check-input' %>
            <%= f.label t(".remember_me"), class: 'form-check-label' %>
          </div>
        <% end %>

        <div align="center"><%= f.submit t(".sign_in_button"), class: 'btn btn-form btn-primary w-100 py-2' %><div>
      <% end %>
    </div>
  </div>
</main>
