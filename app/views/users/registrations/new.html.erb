<%= render "users/shared/error_messages", resource: resource %>
<main class="w-20 m-auto">
  <div class="row align-items-center border-form">
    <div class="border container p-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div align="center"><h1><%= t(".sign_up_title") %></h1></div><br>

        <div class="field">
          <%= f.text_field :first_name, class: "form-control", placeholder: User.human_attribute_name(:first_name), autofocus: true %>
        </div>

        <div class="field">
          <%= f.text_field :last_name, class: "form-control", placeholder: User.human_attribute_name(:last_name) %>
        </div>

        <div class="field">
          <%= f.email_field :email, class: "form-control", placeholder: User.human_attribute_name(:email) %>
        </div>

        <div class="field">
          <%= f.password_field :password, class:"form-control", placeholder: User.human_attribute_name(:password) %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, class:"form-control", placeholder: User.human_attribute_name(:password_confirmation)%>
        </div>

        <%= f.submit t(".sign_up_button"), class: 'btn btn-form btn-primary w-100 py-2' %>
        <div align="center"><%= render "users/shared/links" %></div>
      <% end %>
    </div>
  </div>
</main>
