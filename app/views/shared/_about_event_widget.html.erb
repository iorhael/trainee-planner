<div class="card border border-primary">
  <div class="card-header bg-transparent"><h2><%= t('.about_event') %></h2></div>
  <ul class="list-group list-group-horizontal">
    <li class="list-group-item flex-fill"><%= l(@event.event_time, format: :long) %></li>
    <li class="list-group-item flex-fill"><%= "#{@event.category.name}" %></li>
  </ul>
  <div class="card-body p-4">
    <p class="fs-5 fst-italic">
      <%= @event.description.present? ? @event.description : t('.no_description') %>
    </p>
    <%= link_to t('.back_link'), :back, class: "btn btn-primary" %>
  </div>
</div>
